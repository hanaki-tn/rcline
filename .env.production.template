# RC公式LINE 本番環境設定テンプレート
# 本ファイルを .env.production にコピーして値を設定してください

# LINE API設定
LINE_CHANNEL_SECRET=your_channel_secret_here
LINE_CHANNEL_ACCESS_TOKEN=your_access_token_here

# RC LINE API設定（本番）
NODE_ENV=production
FILES_PUBLIC_URL_BASE=https://awf.technavigation.jp/files
ONBOARDING_MODE=silent
ONBOARDING_NAME_NFKC=0

# セキュリティ（本番用に変更要）
JWT_SECRET=production-jwt-secret-change-this-value
SESSION_SECRET=production_session_secret_change_this_value
CSRF_SECRET=production_csrf_secret_change_this_value

# 本番設定
DEV_PUSH_DISABLE=0  # 実際の配信を有効化
DATABASE_PATH=/app/data/rcline.db

# 管理者アカウント
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_admin_password

# Google Sheets API設定（現在未使用）
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_SHEETS_ID=your_sheet_id
GOOGLE_SHEET_NAME=Members
GOOGLE_REFRESH_TOKEN=

# n8n連携（現在停止中）
